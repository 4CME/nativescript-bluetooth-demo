<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout col="0" orientation="vertical">
    <StackLayout col="0" orientation="vertical" cssClass="tab-content">
      <Label text="Service" cssClass="details-label-title" />
      <Label text="{{ UUID }}" cssClass="uuid-label" />
      <Label text="Characteristics:" />
    </StackLayout>

    <GridLayout rows="*">
      <ListView items="{{ characteristics }}" itemTap="onCharacteristicTap" separatorColor="#90c3d4">
          <ListView.itemTemplate>
            <GridLayout columns="*,*,*" rows="auto,auto,auto" horizontalAlignment="center" cssClass="tab-content">
              <Label row="0" colSpan="3" text="{{ UUID }}" />
              <Label row="1" colSpan="3" text="{{ value }}" visibility="{{ value != null ? 'visible' : 'collapsed' }}" />
              <Label row="1" col="0" text="read" visibility="{{ properties.read ? 'visible' : 'collapsed' }}" />
              <Label row="1" col="1" text="write" visibility="{{ properties.write ? 'visible' : 'collapsed' }}" />
              <Label row="1" col="2" text="notify" visibility="{{ properties.notify ? 'visible' : 'collapsed' }}" />
              <Label row="2" col="0" text="broadcast" visibility="{{ properties.broadcast ? 'visible' : 'collapsed' }}" />
              <Label row="2" colSpan="2" text="writewithoutresponse" visibility="{{ properties.writeWithoutResponse ? 'visible' : 'collapsed' }}" />
            </GridLayout>
          </ListView.itemTemplate>
      </ListView>
    </GridLayout>
  </StackLayout>
</Page>